# GKP Radio Environment Configuration
# Copy this file to .env and update with your values

# ==========================================
# CRITICAL CONFIGURATION (REQUIRED)
# ==========================================

# Database Configuration
DATABASE_URL=postgresql://gkp_user:YOUR_SECURE_PASSWORD@localhost:5432/gkp_radio
# For Docker deployment, use: postgresql://gkp_user:YOUR_SECURE_PASSWORD@postgres:5432/gkp_radio

# Security
JWT_SECRET=CHANGE_THIS_TO_A_SUPER_SECURE_32_CHARACTER_MINIMUM_SECRET_KEY
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_SECURE_32_CHARACTER_MINIMUM_SECRET_KEY

# Node Environment
NODE_ENV=production
PORT=5000
SITE_URL=https://your-domain.com

# ==========================================
# VPS/DOMAIN CONFIGURATION
# ==========================================

# Replace 'your-domain.com' with your actual domain or VPS IP address
DOMAIN=your-domain.com

# ==========================================
# STREAMING CONFIGURATION
# ==========================================

# RTMP Streaming Server
RTMP_BASE_URL=rtmp://your-domain.com:1935
RTMP_EDGE_URL=rtmp://your-domain.com:1935
RTMP_HTTP_PORT=8001

# HLS Video Streaming
HLS_BASE_URL=http://your-domain.com:8000

# MediaMTX WebRTC Configuration (Ultra-Low Latency)
MEDIAMTX_BASE_URL=http://your-domain.com:8889
MEDIAMTX_API_URL=http://your-domain.com:9997

# ==========================================
# FRONTEND CONFIGURATION (VITE)
# ==========================================

# VPS Host Configuration
VITE_VPS_HOST=your-domain.com
VITE_HLS_BASE_URL=http://your-domain.com:8000

# ==========================================
# AZURACAST INTEGRATION
# ==========================================

# Backend AzuraCast Configuration
AZURACAST_BASE_URL=http://74.208.102.89:8080
AZURACAST_API_URL=http://74.208.102.89
AZURACAST_API_KEY=your_azuracast_api_key_here
AZURACAST_STATION_ID=1

# Frontend AzuraCast Configuration
VITE_AZURACAST_BASE_URL=http://74.208.102.89:8080
VITE_AZURACAST_STATION_ID=1

# ==========================================
# MOBILE APP CONFIGURATION (Expo/React Native)
# ==========================================

# IMPORTANT: All mobile env vars MUST use EXPO_PUBLIC_ prefix
# These variables are embedded in the mobile app at build time

# Supabase for mobile (REQUIRED)
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# AzuraCast for mobile (REQUIRED for radio streaming)
# CRITICAL: Must use HTTPS for iOS App Store (Apple App Transport Security)
EXPO_PUBLIC_AZURACAST_BASE_URL=https://your-domain.com
EXPO_PUBLIC_AZURACAST_STATION_ID=1

# Backend API URL for mobile app
# Use your production domain or Replit deployment URL
EXPO_PUBLIC_API_URL=https://your-repl-name.repl.co

# ==========================================
# OWNCAST INTEGRATION (Optional)
# ==========================================

OWNCAST_BASE_URL=http://your-domain.com:8080
OWNCAST_ADMIN_PASSWORD=your_owncast_admin_password
VITE_OWNCAST_SERVER_URL=https://your-domain.com:8080
VITE_OWNCAST_RTMP_URL=rtmp://your-domain.com:1935/live
VITE_OWNCAST_STREAM_KEY=gkpAdmin2025@

# ==========================================
# SUPABASE CONFIGURATION (Required)
# ==========================================

# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Frontend Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# ==========================================
# PAYMENT INTEGRATION (Optional)
# ==========================================

# Stripe Configuration
# Use test keys for development, live keys for production
STRIPE_SECRET_KEY=sk_test_or_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_or_live_your_stripe_publishable_key
PAYMENTS_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Frontend Stripe Configuration
VITE_STRIPE_PUBLIC_KEY=pk_test_or_live_your_stripe_publishable_key

# ==========================================
# EMAIL CONFIGURATION (Optional - Choose one provider)
# ==========================================

# MailerSend Configuration (Preferred)
# Get your API token from https://www.mailersend.com/
MAILERSEND_API_TOKEN=your-mailersend-api-token

# SendGrid Configuration (Alternative)
# Get your API key from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your-sendgrid-api-key

# Email Settings (used by both providers)
FROM_EMAIL=noreply@godkingdomprinciplesradio.com
ADMIN_EMAIL=ads@gkpradio.com

# NOTE: If neither email service is configured, the app will work but email
# notifications (password reset, replies, etc.) will be disabled

# ==========================================
# SPAM PROTECTION (Optional)
# ==========================================

# Cloudflare Turnstile Configuration
ANTI_SPAM_ENABLED=true
TURNSTILE_SECRET_KEY=your_cloudflare_turnstile_secret_key_here
TURNSTILE_SITE_KEY=your_cloudflare_turnstile_site_key_here
VITE_ANTI_SPAM_ENABLED=true
VITE_TURNSTILE_SITE_KEY=your_cloudflare_turnstile_site_key_here

# ==========================================
# SSL CONFIGURATION (For Nginx)
# ==========================================

# SSL Certificate Paths (update for production)
SSL_CERT_PATH=/etc/letsencrypt/live/your-domain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/your-domain.com/privkey.pem

# ==========================================
# DOCKER CONFIGURATION (Optional)
# ==========================================

# Docker-specific Configuration
DB_PASSWORD=gkp_secure_password_for_docker
REDIS_PASSWORD=redis_secure_password

# ==========================================
# MONITORING & LOGGING
# ==========================================

# Log Levels
LOG_LEVEL=info

# Sentry Error Tracking (Optional)
SENTRY_DSN=

# ==========================================
# DEVELOPMENT OVERRIDES
# ==========================================

# Uncomment these for local development
# NODE_ENV=development
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/gkp_radio_dev
# RTMP_BASE_URL=rtmp://localhost:1935
# HLS_BASE_URL=http://localhost:8000